Commands:

scrapy startproject api_project
scrapy genspider quotes https://quotes.toscrape.com/scroll
scrapy crawl quotes
scrapy crawl quotes -o quotes.json

scrapy crawl quotes -o quotes_pagination.json
scrapy crawl quotes -o quotes_pagination1.json

username : admin
password : admin

scrapy genspider quotes_login quotes.toscrape.com/login

scrapy crawl quotes_login


